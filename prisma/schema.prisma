generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FinancialRecord {
  id                 Int      @id @default(autoincrement())
  segment            String
  country            String
  product            String
  discountBand       String   @map("discount_band")
  unitsSold          Decimal  @map("units_sold") @db.Decimal(12, 2)
  manufacturingPrice Decimal  @map("manufacturing_price") @db.Decimal(12, 2)
  salePrice          Decimal  @map("sale_price") @db.Decimal(12, 2)
  grossSales         Decimal  @map("gross_sales") @db.Decimal(12, 2)
  discounts          Decimal  @db.Decimal(12, 2)
  sales              Decimal  @db.Decimal(12, 2)
  cogs               Decimal  @db.Decimal(12, 2)
  profit             Decimal  @db.Decimal(12, 2)
  date               DateTime @db.Date
  monthNumber        Int      @map("month_number")
  monthName          String   @map("month_name")
  year               Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("financial_records")
}

model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  hashedPassword String   @map("hashed_password")
  createdAt      DateTime @default(now()) @map("created_at")

  @@map("users")
}
